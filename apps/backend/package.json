{
  "name": "@ai-support/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && tsx prisma/seed.ts",
    "setup": "prisma migrate dev --name init && tsx prisma/seed.ts"
  },
  "dependencies": {
    "@ai-sdk/google": "^0.0.52",
    "@ai-support/shared": "*",
    "@prisma/client": "^5.14.0",
    "ai": "^3.3.0",
    "hono": "^4.4.0",
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.4.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prisma": "^5.14.0",
    "tsx": "^4.15.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
